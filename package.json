{
  "name": "claude-pr-analisys",
  "version": "2.0.0",
  "description": "A TypeScript module that uses Claude AI to analyze Jira tasks, GitHub diffs and code context to provide feedback on PRs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "analyze-pr": "dist/analyze-pr.js",
    "comment-pr": "dist/comment-pr.js"
  },
  "files": [
    "dist/**/*",
    "!dist/**/*.test.*"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist temp",
    "start": "npm run build && node dist/analyze-pr.js",
    "start:comment": "npm run build && node dist/comment-pr.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "lint": "eslint \"src/**/*.{ts,js}\" --ext .ts,.js",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" --ext .ts,.js --fix",
    "lint:ci": "eslint \"src/**/*.{ts,js}\" --ext .ts,.js --format=compact",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "prebuild": "npm run clean",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "github",
    "jira",
    "pr-analysis",
    "claude-ai",
    "automation",
    "typescript",
    "ci-cd"
  ],
  "author": "Anthony Rizzo",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "optionalDependencies": {}
}
